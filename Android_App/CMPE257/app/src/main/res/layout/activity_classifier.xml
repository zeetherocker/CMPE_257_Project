<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:theme="@style/ToolbarStyle"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:weightSum="3">

        <RelativeLayout android:id="@+id/imageContainer"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

            <ImageView
                    android:id="@+id/image"
                    android:scaleType="centerCrop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout android:id="@+id/predictionContainer" android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" android:background="@color/blue_grey">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true"
                      android:id="@+id/prediction" android:textSize="20sp" android:textColor="@color/white" android:textAlignment="center"/>
        </RelativeLayout>

        <RelativeLayout android:id="@+id/buttonContainer"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" android:background="@color/teal_status">

            <android.support.v7.widget.CardView
                    android:layout_centerInParent="true"
                    android:id="@+id/button"
                    style="@style/DefaultButtonOnCard">

                <TextView android:id="@+id/buttonText"
                          style="@style/DefaultButtonOnCardText"
                          android:text="CLASSIFY"/>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>